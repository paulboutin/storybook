{
  "name": "botw-component-library",
  "version": "1.0.0",
  "scripts": {
    "start": "start-storybook -p 6006 -s public",
    "build": "run-s build:**",
    "build:tailwind:bundle": "postcss css/main.css -o tailwind-build/styles.css -v",
    "build:tailwind:split": "run-s tailwind:split:*",
    "build:storybook": "build-storybook -s public",
    "tailwind:split:base": "postcss node_modules/tailwindcss/base.css -o tailwind-build/split/base.css -v",
    "tailwind:split:components": "postcss css/components -d tailwind-build/split -v",
    "tailwind:split:sass": "node create-main-sass.js",
    "tailwind:split:zip": "zip -r -j -X public/styles.zip tailwind-build/split/* && rm -rf tailwind-build/split",
    "lint": "pretty-quick"
  },
  "dependencies": {
    "@storybook/html": "5.3.19",
    "@whitespace/storybook-addon-code": "1.0.2",
    "@whitespace/storybook-addon-html": "1.2.1",
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "autoprefixer": "9.8.0",
    "babel-loader": "8.1.0",
    "husky": "4.2.5",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "pretty-quick": "2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
