{
  "name": "botw-component-library",
  "version": "1.0.0",
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "build-storybook",
    "lint": "pretty-quick",
    "tailwind": "postcss tailwind/main.css -o tailwind-build/bundle.css -v",
    "tailwind:watch": "npm run tailwind -- --watch",
    "tailwind:split": "run-s tailwind:split:*",
    "tailwind:split:base": "postcss node_modules/tailwindcss/base.css -o tailwind-build/split/base.css -v",
    "tailwind:split:components": "postcss tailwind/components -d tailwind-build/split -v",
    "tailwind:split:sass": "node create-main-sass.js"
  },
  "dependencies": {
    "@storybook/html": "5.3.19",
    "@whitespace/storybook-addon-code": "1.0.2",
    "@whitespace/storybook-addon-html": "1.2.1",
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "autoprefixer": "9.8.0",
    "babel-loader": "8.1.0",
    "husky": "4.2.5",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "pretty-quick": "2.0.1",
    "sass-loader": "8.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
