{
  "name": "botw-component-library",
  "version": "1.0.0",
  "scripts": {
    "start": "start-storybook -p ${PORT:-6006} -s public",
    "start:ci": "npm start -- --ci --quiet",
    "build": "run-s build:**",
    "build:tailwind:bundle": "postcss src/css/main.css -o tailwind-build/styles.css -v",
    "build:tailwind:split": "run-s tailwind:split:*",
    "build:storybook": "build-storybook -s public",
    "tailwind:split:base": "postcss node_modules/tailwindcss/base.css -o tailwind-build/split/base.css -v",
    "tailwind:split:components": "postcss src/css/components -d tailwind-build/split -v",
    "tailwind:split:sass": "node create-main-sass.js",
    "tailwind:split:zip": "zip -r -j -X public/styles.zip tailwind-build/split/* && rm -rf tailwind-build/split",
    "lint": "pretty-quick",
    "test": "npm run test:server",
    "test:unit": "jest -c jest.config.js",
    "test:integration": "jest -c jest.integration.js",
    "test:server": "cross-env PORT=${PORT:-6006} start-server-and-test start:ci http://localhost:${PORT:-6006} test:integration"
  },
  "dependencies": {
    "@storybook/html": "5.3.19",
    "@whitespace/storybook-addon-html": "1.2.1",
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@types/jest": "26.0.0",
    "autoprefixer": "9.8.0",
    "babel-jest": "26.0.1",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-image-snapshot": "4.0.2",
    "jest-puppeteer": "4.4.0",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "pretty-quick": "2.0.1",
    "puppeteer": "4.0.0",
    "start-server-and-test": "1.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
