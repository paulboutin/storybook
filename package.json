{
  "name": "botw-component-library",
  "version": "1.0.0",
  "scripts": {
    "start": "start-storybook -p ${PORT:-6006} -s public",
    "start:ci": "npm start -- --ci --quiet",
    "build": "run-s build:**",
    "build:sass": "node-sass src/sass/main.scss build/styles.css --output-style compressed",
    "build:postcss": "postcss build/styles.css -r",
    "build:scripts": "webpack src/js/main.js -o build/scripts.js --mode production",
    "build:zip:styles": "cd src/sass && zip -r -X ../../public/styles.zip .",
    "build:zip:scripts": "cd src/js && zip -r -X ../../public/scripts.zip .",
    "build:storybook": "build-storybook -s public",
    "dsm:publish": "dsm-storybook --auth-token ${DSM_TOKEN} publish",
    "dsm:preview": "dsm-storybook --auth-token ${DSM_TOKEN:-preview} preview -s public --quiet",
    "lint": "pretty-quick",
    "test": "run-s test:unit test:snapshot",
    "test:unit": "jest -c test/unit/jest.config.js --passWithNoTests",
    "test:integration": "jest -c test/integration/jest.config.js --max-workers 2 --updateSnapshot=${UPDATE_SNAPSHOT:-false}",
    "test:snapshot": "cross-env PORT=${PORT:-6006} JEST_PUPPETEER_CONFIG=test/integration/jest-puppeteer.config.js start-server-and-test start:ci http://localhost:${PORT:-6006} test:integration",
    "test:snapshot:update": "cross-env UPDATE_SNAPSHOT=true npm run test:snapshot"
  },
  "dependencies": {
    "@invisionapp/dsm-storybook": "0.0.129",
    "@storybook/addon-backgrounds": "5.3.19",
    "@storybook/addon-knobs": "5.3.19",
    "@storybook/addon-options": "5.3.19",
    "@storybook/addon-viewport": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/client-api": "5.3.19",
    "@storybook/html": "5.3.19",
    "@whitespace/storybook-addon-html": "1.2.1",
    "classnames": "2.2.6",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-react": "7.10.4",
    "@testing-library/dom": "7.20.0",
    "@testing-library/jest-dom": "5.11.0",
    "@types/jest": "26.0.0",
    "autoprefixer": "9.8.0",
    "babel-jest": "26.0.1",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-image-snapshot": "4.0.2",
    "jest-puppeteer": "4.4.0",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "pretty-quick": "2.0.1",
    "puppeteer": "4.0.0",
    "sass-loader": "9.0.1",
    "start-server-and-test": "1.11.0",
    "webpack-cli": "3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
