{
  "name": "botw-component-library",
  "version": "1.0.0",
  "scripts": {
    "start": "start-storybook -p ${PORT:-6006} -s public",
    "start:ci": "npm start -- --ci --quiet",
    "build": "run-s build:**",
    "build:tailwind:bundle": "postcss src/css/main.css -o tailwind-build/styles.css -v",
    "build:tailwind:split": "run-s tailwind:split:*",
    "build:storybook": "build-storybook -s public",
    "tailwind:split:base": "postcss node_modules/tailwindcss/base.css -o tailwind-build/split/base.css -v",
    "tailwind:split:components": "postcss src/css/components -d tailwind-build/split -v",
    "tailwind:split:sass": "node scripts/create-main-sass.js",
    "tailwind:split:zip": "zip -r -j -X public/styles.zip tailwind-build/split/* && rm -rf tailwind-build/split",
    "dsm:publish": "dsm-storybook --auth-token ${DSM_TOKEN} publish",
    "dsm:preview": "dsm-storybook --auth-token ${DSM_TOKEN:-preview} preview -s public --quiet",
    "lint": "pretty-quick",
    "test": "run-s test:unit test:snapshot",
    "test:unit": "jest -c test/unit/jest.config.js",
    "test:integration": "jest -c test/integration/jest.config.js --max-workers 2 --updateSnapshot=${UPDATE_SNAPSHOT:-false}",
    "test:snapshot": "cross-env PORT=${PORT:-6006} JEST_PUPPETEER_CONFIG=test/integration/jest-puppeteer.config.js start-server-and-test start:ci http://localhost:${PORT:-6006} test:integration",
    "test:snapshot:update": "cross-env UPDATE_SNAPSHOT=true npm run test:snapshot"
  },
  "dependencies": {
    "@invisionapp/dsm-storybook": "0.0.129",
    "@storybook/addon-backgrounds": "5.3.19",
    "@storybook/addon-knobs": "5.3.19",
    "@storybook/addon-options": "5.3.19",
    "@storybook/addon-viewport": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/html": "5.3.19",
    "@whitespace/storybook-addon-html": "1.2.1",
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@types/jest": "26.0.0",
    "autoprefixer": "9.8.0",
    "babel-jest": "26.0.1",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-image-snapshot": "4.0.2",
    "jest-puppeteer": "4.4.0",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "pretty-quick": "2.0.1",
    "puppeteer": "4.0.0",
    "start-server-and-test": "1.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
